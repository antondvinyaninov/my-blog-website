---
import { Heart, MessageCircle, Bookmark, ArrowLeft, ArrowRight, Music } from 'lucide-react';
import type { Post } from '../consts';

interface Props {
  post: Post;
}

const { post } = Astro.props;
---

<div class="relative py-12 lg:py-20 select-none">
  <div class="container mx-auto px-4 lg:px-8">
    <div class="relative grid grid-cols-1 lg:grid-cols-12 gap-8 items-center">
      
      {/* Right Side: Image */}
      <div class="lg:col-span-9 lg:col-start-4 lg:row-start-1 relative group">
         <div class="relative rounded-[2.5rem] overflow-hidden aspect-[16/10] shadow-2xl">
            <picture>
              <source 
                srcset={post.coverImage.replace(/\.(jpg|jpeg|png)$/i, '.avif')} 
                type="image/avif"
              />
              <source 
                srcset={post.coverImage.replace(/\.(jpg|jpeg|png)$/i, '.webp')} 
                type="image/webp"
              />
              <img 
                src={post.coverImage} 
                alt={post.title} 
                class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
                loading="eager"
                fetchpriority="high"
                decoding="async"
                width="1200"
                height="750"
              />
            </picture>
         </div>
      </div>

      {/* Left Side: Overlapping Card */}
      <div class="lg:col-span-5 lg:col-start-1 lg:row-start-1 z-10 relative">
        <div class="bg-white/60 backdrop-blur-xl p-6 md:p-10 rounded-[2rem] shadow-xl border border-white/40">
           {/* Category */}
           <div class="mb-4">
             <span class="px-3 py-1 text-xs font-semibold uppercase tracking-wider text-slate-700 bg-slate-100 rounded-lg">
               {post.category.name}
             </span>
           </div>
           
           {/* Title */}
           <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-slate-900 mb-8 leading-tight">
             {post.title}
           </h1>
           
           {/* Footer: Stats */}
           <div class="flex items-center justify-between pt-6 border-t border-slate-100">
              <div class="flex items-center gap-4">
                 <button class="flex items-center gap-2 px-3 py-1.5 rounded-full bg-red-50 text-red-600 hover:bg-red-100 transition-colors text-sm font-medium">
                    <Heart className="w-4 h-4 fill-current" />
                    <span>3.4k</span>
                 </button>
                 <button class="flex items-center gap-2 text-slate-500 hover:text-slate-900 transition-colors text-sm font-medium">
                    <MessageCircle className="w-4 h-4" />
                    <span>89</span>
                 </button>
              </div>
              
              <div class="flex items-center gap-3 text-slate-500 text-sm font-medium">
                 <span>{post.date}</span>
                 <span class="w-1 h-1 rounded-full bg-slate-300"></span>
                 <span>{post.readTime}</span>
                 <button class="w-8 h-8 rounded-full hover:bg-slate-100 flex items-center justify-center transition-colors">
                   <Bookmark className="w-5 h-5" />
                 </button>
              </div>
           </div>
        </div>
        
        {/* Navigation Arrows (Outside Card) */}
        <div class="mt-8 flex items-center gap-4">
           <button class="w-12 h-12 rounded-full border border-slate-200 bg-white text-slate-500 flex items-center justify-center hover:border-slate-900 hover:text-slate-900 transition-all">
              <ArrowLeft className="w-5 h-5" />
           </button>
           <button class="w-12 h-12 rounded-full border border-slate-200 bg-white text-slate-500 flex items-center justify-center hover:border-slate-900 hover:text-slate-900 transition-all">
              <ArrowRight className="w-5 h-5" />
           </button>
        </div>

      </div>
      
    </div>
  </div>
</div>
