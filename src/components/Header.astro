---
import { Search, Menu, Bell } from 'lucide-react';
import AvatarDropdown from './AvatarDropdown';
---

<header class="sticky top-0 z-50 w-full backdrop-blur-md bg-white/70 border-b border-slate-200/60 dark:bg-neutral-900/80 dark:border-white/10 transition-colors duration-300">
  <div class="container mx-auto px-4 lg:px-8 h-16 flex items-center justify-between">
    {/* Logo */}
    <a href="/" class="flex items-center gap-2 group">
      <div class="w-8 h-8 rounded-lg bg-slate-900 flex items-center justify-center text-white font-bold text-xl group-hover:bg-slate-800 transition-colors dark:bg-white dark:text-neutral-900 dark:group-hover:bg-neutral-200">
        D
      </div>
      <span class="font-bold text-xl tracking-tight text-slate-900 dark:text-white">Dvinyaninov</span>
    </a>

    {/* Desktop Nav */}
    <nav class="hidden md:flex items-center gap-8">
      <a href="/" class="text-sm font-medium text-slate-600 hover:text-slate-900 dark:text-neutral-300 dark:hover:text-white transition-colors">Главная</a>
      <a href="#" class="text-sm font-medium text-slate-600 hover:text-slate-900 dark:text-neutral-300 dark:hover:text-white transition-colors">Статьи</a>
      <a href="#" class="text-sm font-medium text-slate-600 hover:text-slate-900 dark:text-neutral-300 dark:hover:text-white transition-colors">Подкасты</a>
      <a href="/submission" class="text-sm font-medium text-slate-600 hover:text-slate-900 dark:text-neutral-300 dark:hover:text-white transition-colors">Предложить</a>
    </nav>

    {/* Actions */}
    <div class="flex items-center gap-4">
      <button class="p-2 text-slate-500 hover:text-slate-700 hover:bg-slate-100 dark:text-neutral-400 dark:hover:text-neutral-200 dark:hover:bg-neutral-800 rounded-full transition-colors">
        <Search className="w-6 h-6" />
      </button>
      <button class="p-2 text-slate-500 hover:text-slate-700 hover:bg-slate-100 dark:text-neutral-400 dark:hover:text-neutral-200 dark:hover:bg-neutral-800 rounded-full transition-colors">
        <Bell className="w-6 h-6" />
      </button>
      
      <AvatarDropdown client:idle />
    </div>
  </div>
</header>
